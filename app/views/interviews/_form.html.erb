<div class="row">
  <%= form_for(@interview, html: {class: "g-3"}) do |f| %>
    <%= form_errors(@interview) %>
    <div class="mb-3 row">
      <%= f.label :candidate, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.select :candidate_id, options_for_select(@candidates.collect{|c| [c.name, c.id]},@interview.candidate_id),{},{class: "form-select form-select-lg mb-3"} %>
      </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :requirements, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_area :requirements, cols: 30, rows: 5, html: {class: "form-control"} %>          
      </div>
    </div>

    <%= f.fields_for :interview_rounds do |ir| %>
      <%= render "interview_round_fields", f: ir %>
    <% end %>

    <div class="row">
      <%= link_to_add_fields "Add Interview Round", f, :interview_rounds %>      
    </div>    

    <div class="mb-3 row">
      <%= f.submit "Submit", class: "btn btn-success col-sm-2" %>
      <div class="col-sm-10"><%= link_to "Cancel", interviews_path, class: "btn btn-secondary col-sm-2"%></div>
    </div>
  <% end %> <!-- form_for end -->
</div>
