<h1><%= params[:type].capitalize.pluralize %> List</h1>
<div class="row">
  <div class="col text-start">
      <%= link_to "<< Back", root_path, class: "btn btn-secondary" %>
  </div>

  <div class="col text-end">
      <%= link_to "New #{params[:type].capitalize}", new_person_path(type: params[:type]), class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <%= display_people_table(@list, params[:type], params[:page]) %>
</div>

<div class="row">
  <%= paginate @list %>
</div>
